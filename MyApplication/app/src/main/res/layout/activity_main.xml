<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:orientation="vertical"
    android:background="@color/background2"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_marginTop="40dp"
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/icon3"
        android:contentDescription="TODO" />


    <TextView
        android:textColor="#2fff00"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/masrou3a"
        android:layout_marginBottom="40dp"
        />

    <EditText
        android:id="@+id/email"
        android:textColor="@color/white"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:drawableLeft="@drawable/email1"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:hint="@string/email"
        android:layout_width="match_parent"
        android:textColorHint="@color/white"
        android:layout_height="wrap_content"
        android:autofillHints="" />

    <EditText
        android:id="@+id/pass"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:drawableLeft="@drawable/lock1"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:hint="@string/pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="" />

    <Button
        class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored"
        android:background="@color/colorAccent"
        android:layout_margin="20dp"
        android:textColor="@color/white"
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOG IN" />

    <TextView
        android:id="@+id/create_one"
        android:textAlignment="center"
        android:text="Don't have account yet? create one."
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:layout_marginTop="20dp"
        style="?android:attr/progressBarStyleLargeInverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pbbar"
        android:layout_gravity="center"
        />

</LinearLayout>